<div class='main_div'>
  <% @users.each do |user| %>
    <div class='user_div'>
        <div class='user_photo'>
          <%= image_tag user.photo %>
        </div>
        <div class='user_info'>
          <%= link_to user.name, user_path(user), class: 'user_name'%>
          <p class='number_of_posts'>Number of posts: <%= user.post_counter %></p>
        </div>
    </div>
  <% end %>
</div>
