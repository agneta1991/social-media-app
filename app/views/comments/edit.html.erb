<div class='main_form_div'>
  <h1>Edit your Comment</h1>
  <%= form_with(model: [current_user, @comment], data: { turbo: false }, local: true) do |form| %>
    <div class="field">
      <%= form.text_field :comment, placeholder: 'Comment', value: @post.comment %>
    </div>
    <div class="actions">
      <%= form.submit "Update Comment", class: "btn" %>
    </div>
  <% end %>
</div>
