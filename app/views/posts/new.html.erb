<div class= 'main_form_div'>
  <h1>New Post</h1>
<%= form_with model: [:user, @post], data: { turbo: false }, local: true do |form| %>
   <div class="field">
    <%= form.text_field :title, placeholder: 'Title'%>
  </div>
  <div class="field">
    <%= form.text_area :text, placeholder: 'Your post' %>
  </div>
  <div class="actions">
    <%= form.submit 'Create Post' %>
  </div>
<% end %>
</div>